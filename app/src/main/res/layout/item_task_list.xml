<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_task_title"
        android:layout_alignParentLeft="true"
        tools:text="Email Sophia"
        android:padding="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/id_task_dateandtime"
        android:layout_below="@id/id_task_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_task_date"
            android:layout_below="@id/id_task_title"
            tools:text="10 August 2016"
            android:padding="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5:30 PM"
            android:layout_marginLeft="20dp"
            android:id="@+id/id_task_time"/>

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/id_task_time"-->
        <!--android:layout_toRightOf="@id/id_task_date"-->
        <!--android:layout_below="@id/id_task_title"-->
        <!--tools:text="5 AM"-->
        <!--android:padding="4dp"-->
        <!--android:layout_marginLeft="10dp"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_task_description"
        android:layout_below="@id/id_task_dateandtime"
        tools:text="High Priority saale varna vo maar daalegi :("
        android:padding="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_task_priority"
        android:layout_alignParentRight="true"
        tools:text="Priority:Very High"
        android:padding="4dp"
        android:textColor="@android:color/holo_red_dark"/>



</RelativeLayout>